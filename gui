-- Verifica se o ImageButton já existe no CoreGui
local function checkIfButtonExists()
    local existingGui = game.CoreGui:FindFirstChild("MyScreenGui")
    if existingGui then
        local existingButton = existingGui:FindFirstChild("MyImageButton")
        if existingButton then
            return true  -- O botão já existe
        end
    end
    return false  -- O botão não existe
end

-- Verifica se o código já está em funcionamento
if not checkIfButtonExists() then
    -- Cria o ScreenGui e o ImageButton
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "MyScreenGui"
    ScreenGui.Parent = game.CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local ImageButton = Instance.new("ImageButton")
    ImageButton.Name = "MyImageButton"
    ImageButton.Parent = ScreenGui
    ImageButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    ImageButton.BorderSizePixel = 0
    ImageButton.Position = UDim2.new(0.120833337, 0, 0.0952890813, 0)
    ImageButton.Size = UDim2.new(0, 50, 0, 50)
    ImageButton.Draggable = true
    ImageButton.Image = "http://www.roblox.com/asset/?id=16024431693"
    
    -- Conecta o evento MouseButton1Down
    ImageButton.MouseButton1Down:Connect(function()
        game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.LeftControl, false, game)
    end)
else
    warn("O código já está em funcionamento.")
end
