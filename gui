-- Função para verificar se o ScreenGui já existe no CoreGui
local function checkIfGuiExists()
    return game.CoreGui:FindFirstChild("MyScreenGui") ~= nil
end

-- Verifica se o código já está em funcionamento
if not checkIfGuiExists() then
    -- Cria o ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "MyScreenGui"
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.Parent = game.CoreGui
    
    -- Cria o ImageButton dentro do ScreenGui
    local ImageButton = Instance.new("ImageButton")
    ImageButton.Name = "MyImageButton"
    ImageButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)  -- Cor de fundo branca para mostrar o botão
    ImageButton.BorderSizePixel = 0
    ImageButton.Position = UDim2.new(0.5, -25, 0.5, -25)  -- Posição central
    ImageButton.Size = UDim2.new(0, 50, 0, 50)  -- Tamanho do botão
    ImageButton.Image = "http://www.roblox.com/asset/?id=16024431693"  -- URL da imagem do botão
    ImageButton.Parent = ScreenGui
    
    -- Conecta o evento MouseButton1Down
    ImageButton.MouseButton1Down:Connect(function()
        game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.LeftControl, false, game)
    end)
    
else
    warn("O código já está em funcionamento.")
end
